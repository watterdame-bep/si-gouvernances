# ============================================================================
# CONFIGURATION PRODUCTION - SI-GOUVERNANCE
# ============================================================================
# ⚠️  IMPORTANT: Copier ce fichier vers .env.production et modifier les valeurs
# ⚠️  NE JAMAIS commiter .env.production avec des vraies valeurs!
# ============================================================================

# ============================================================================
# DJANGO - CONFIGURATION OBLIGATOIRE
# ============================================================================
# Générer avec: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=

# OBLIGATOIRE: False en production
DJANGO_DEBUG=False

# OBLIGATOIRE: Liste des domaines autorisés (séparés par des virgules)
DJANGO_ALLOWED_HOSTS=votre-domaine.com,www.votre-domaine.com

DJANGO_SETTINGS_MODULE=si_gouvernance.settings

# ============================================================================
# BASE DE DONNÉES MYSQL - OBLIGATOIRE
# ============================================================================
DB_NAME=si_gouvernance
DB_USER=si_user
DB_PASSWORD=
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=

# ============================================================================
# REDIS - OBLIGATOIRE
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================================================
# EMAIL SMTP - OBLIGATOIRE
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=SI-Gouvernance <votre-email@gmail.com>

# ============================================================================
# CELERY - CONFIGURATION
# ============================================================================
CELERY_TIMEZONE=Europe/Paris
CELERY_LOG_LEVEL=info
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_MAX_TASKS=1000
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Fréquence des alertes (en heures)
CELERY_ALERTS_FREQUENCY_HOURS=4

# ============================================================================
# GUNICORN - CONFIGURATION
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_LOG_LEVEL=info

# ============================================================================
# NGINX - CONFIGURATION
# ============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DOMAIN_NAME=votre-domaine.com

# ============================================================================
# FLOWER (MONITORING) - OBLIGATOIRE SI ACTIVÉ
# ============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=

# ============================================================================
# SÉCURITÉ - PRODUCTION
# ============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=SAMEORIGIN

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# NOTES IMPORTANTES
# ============================================================================
# 1. Toutes les variables marquées OBLIGATOIRE doivent être renseignées
# 2. Les mots de passe doivent être forts (min 16 caractères, alphanumériques + symboles)
# 3. DJANGO_SECRET_KEY doit être unique et ne jamais être partagé
# 4. EMAIL_HOST_PASSWORD pour Gmail: utiliser un mot de passe d'application (16 caractères)
# 5. DJANGO_ALLOWED_HOSTS: liste tous les domaines qui accèdent à l'application
# 6. En production, toujours utiliser HTTPS (SECURE_SSL_REDIRECT=True)
# ============================================================================
