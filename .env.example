# ============================================================================
# CONFIGURATION - SI-GOUVERNANCE
# ============================================================================
# Copier ce fichier vers .env et modifier les valeurs
# ============================================================================

# ============================================================================
# DJANGO
# ============================================================================
DJANGO_SECRET_KEY=local-dev-secret-key-change-in-production-12345678901234567890
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# BASE DE DONNÉES (Docker)
# ============================================================================
DB_NAME=si_gouvernance
DB_USER=si_user
DB_PASSWORD=si_pass123
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=root123

# ============================================================================
# REDIS (Docker)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================================
# EMAIL (Console en local, SMTP en production)
# ============================================================================
# Local: les emails s'affichent dans la console
EMAIL_BACKEND=django.core.mail.backends.console.ConsoleBackend
# Production: décommenter et configurer
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password-16-chars
DEFAULT_FROM_EMAIL=SI-Gouvernance <noreply@localhost>

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=Europe/Paris
# Fréquence des alertes en heures (défaut: 4)
CELERY_ALERTS_FREQUENCY_HOURS=4

# ============================================================================
# PORTS (optionnel)
# ============================================================================
WEB_PORT=8000
FLOWER_PORT=5555

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=DEBUG
